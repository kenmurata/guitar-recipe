<h1>User一覧</h1>
<table border="3">
  <tr>
    <th>id</th>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>編集する</th>
    <th>購入履歴</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to '編集', edit_user_path(user.id) %></td>
      <td><%= link_to '購入履歴', history_user_path(user.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'ユーザの新規作成', new_user_path %>

<h1>商品を追加する</h1>
<%= form_for(@product) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <br>
  <%= f.label :release %>
  <%= f.date_field :release %>
  <br>
  <%= f.submit '追加' , :class => 'btn btn-primary' %>
  <%= link_to '戻る' , :back, :class => 'btn btn-default' %>
  <%= link_to 'TOP' , root_path, :class => 'btn btn-default' %>
<% end %>
<%= notice %>
<% if alert %>
  <text class="text-danger"><%= alert %></text>
<% end %>
<section class="container-fluid top-content">
  <h1>ギター会員管理データベース</h1>
  <br>
  <h4>現在の会員数: <%= @users_num %></h4>
  <h4>現在の商品数: <%= @products_num %></h4>
  <h4>現在のイベント数: <%= @events_num %></h4>
  <%= link_to '全件削除', top_path, :class => 'btn btn-danger', :method => 'delete', data: {confirm: '本当に削除していいですか？' }  %>
  <hr>
  <div class="row">
    <div class="col-sm-12">
      <h3>ペイパル履歴からのインポート</h3>
      <%#= form_tag paypals_import_path, multipart: true do %>
      <%= form_tag csv_import_path, multipart: true do %>
          <%= file_field_tag :file %>
        <br>
        <%= submit_tag 'paypal', :class => 'btn btn-primary' %>
        <%= submit_tag 'infotop', :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</section>

<h1>購入履歴一覧</h1>
<table border="3">
  <tr>
    <th>id</th>
    <th>user_id</th>
    <th>product_id</th>
    <th>編集する</th>
  </tr>
  <% @purchases.each do |purchase| %>
    <tr>
      <td><%= purchase.id %></td>
      <td><%= purchase.user_id %></td>
      <td><%= purchase.product_id %></td>
      <td><%= link_to '編集', edit_purchase_path(purchase.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to '購入履歴の新規作成', new_purchase_path %>

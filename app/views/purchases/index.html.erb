<h1>購入履歴一覧</h1>
<div class="container-fluid"><div class="row"><div class="col-sm-12">
<table class="table table-hover table-bordered">
  <tr class="info">
    <th>id</th>
    <th>購入日</th>
    <th>購入者メールアドレス</th>
    <th>商品番号</th>
    <th>購入価格</th>
    <th>編集する</th>
  </tr>
  <% @purchases.each do |purchase| %>
    <tr>
      <td><%= purchase.id %></td>
      <td><%= purchase.time %></td>
      <td><%= purchase.user.email %></td>
      <td><%= purchase.product.title %></td>
      <td><%= purchase.price %></td>
      <td><%= link_to '編集', edit_purchase_path(purchase.id) %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to '購入履歴の新規作成', new_purchase_path , :class => 'btn btn-primary' %>
<%= link_to '戻る' , :back, :class => 'btn btn-default' %>
<%= link_to 'TOP' , root_path, :class => 'btn btn-default' %>
</div></div></div>
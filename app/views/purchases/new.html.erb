<h1>購入履歴を追加する</h1>
<%= form_for(@purchase) do |f| %>
  <%= f.label :user_id %>
  <%= f.collection_select :user_id, User.all.order(:id), :id, :fname %>
  <br>
  <%= f.label :product_id %>
  <%= f.collection_select :product_id, Product.all.order(:id), :id, :name %>
  <br>
  <%= f.submit '追加', :class => 'btn btn-primary' %>
  <%= link_to '戻る' , :back, :class => 'btn btn-default' %>
  <%= link_to 'TOP' , root_path, :class => 'btn btn-default' %>
<% end %>